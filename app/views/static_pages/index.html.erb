              </div>
            </div>

            <!-- Records -->
            <div class="medium-6 columns text-center info">
              <div class="row">
                <div class="medium-12">
                  <span class="fa-stack fa-lg icon">
                    <i class="fa fa-circle fa-stack-2x" style="color: #E89980;"></i>
                    <i class="fa fa-check-square fa-stack-1x fa-inverse"></i>
                  </span>
                </div>
              </div>
              <div class="row">
                <div class="medium-12 columns">
                  <h3 class="sub-text">Easy Record Keeping</h3>
